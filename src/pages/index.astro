---
import '../styles/global.css';


const pageTitle = "MEET LOLA";

const profileImg = "src/pages/assets/blog_profile.png";

const identity = {
	country: "England",
	city: "Norwich",
	occupation: "Student"
};

const skills = ["HTML", "CSS", "JavaScript", "PostgreSQL", "Java", "Python", "Maths", "Astro"];

function getTodaysDate() {
	var today = new Date();
	var dd = String(today.getDate());
	var mm = String(today.getMonth() + 1);
	return dd + "/" + mm;
};

const birthday = "23/04";

const education = [{
						location:"University of East Anglia",
						website:"https://www.uea.ac.uk/",
						title:"Computing Sciences",
						grades: [[false, "Pending"]]
					},
					{
						location:"Thorpe St Andrew School & Sixth Form",
						website:"https://tsa-edu.co.uk/",
						title:"A-Level",
						grades: [["Further Mathematics", "A*"],
								["Mathematics", "A*"],
								["Computer Science", "A"],
								["Physics", "B"],
								["EPQ", "A*"]]
					},
					{
						location:"Thorpe St Andrew School & Sixth Form",
						website:"https://tsa-edu.co.uk/",
						title:"GCSE",
						grades: [["Mathematics", "9"],
								["Computer Science", "9"],
								["Combined Science", "9 9"],
								["Art & Design", "9"],
								["Design & Technology", "9"],
								["Geography", "9"],
								["English Literature", "9"],
								["English Language", "7"],
								["Creative iMedia", "7"]]
					}
];
---

<!-- MY PLAN 
. Make the website have a light mode, dark mode, system mode, and a separate time mode.
  - The time mode changes the side to be in e.g sunrise/sunset, twilight, night, day, etc.
. Add links to my social media platforms (linkedin, portfolio, github, etc)
. Add image of myself
. Format nicely
. Make Lola's Birthday bit look nice
-->


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style>
			#landing {
				height: 100vh;
			}

			#background {
				width: 100%;
				height: fit-content;
			}

			#info-content {
				display: grid;
				grid-template-areas: "txt profile"
									 "txt socials";
				grid-gap: 0 4vw;
				grid-template-columns: 3fr 2fr;
				background-image: url("/src/pages/assets/blog_bg.png");
				background-size:cover;
				border-radius: 1vw;
				padding: 4vw;
				height: calc(100% - 22vw);
			}

			#info-content h2 {
				font-size: 2.5vw;
				line-height: 0.5em;
			}

			#info-content h3 a {
				padding: 0;
			}

			#info-text {
				grid-area: txt;
				width: 100%;
				background-color: rgba(212, 208, 192, 0.7);
				border-radius: 0.4vw;
				border: 0.4vw solid rgba(212, 208, 192, 0.2);
				font-size: 1.2vw;
			}

			#info-text * {
				padding: 0 2vw;
			}

			#info-text p:first-of-type {
				padding-top: 1vw;
				padding-bottom: 1vw;
			}
			
			#profile {
				grid-area: profile;
				display: flex;
				width: 90%;
				border: 0.4vw solid rgba(212, 208, 192, 0.2);
				border-radius: 20vw;
				margin: auto;
				justify-content: center;
				overflow: hidden;
			}

			#profile img {
				width: 108%;
				height: fit-content;
			}

			#socials {
				grid-area: socials;
				width: 100%;
				margin: auto;
				margin-top: 0;
			}

		</style>
	</head>
	<body>
		<header>
			<!-- Navigation area -->
		</header>
		<main>
			<div id="landing">
				<h1>{pageTitle}</h1>
				
				<div id="info-content">
					<div id="info-text">
						<h2>LOLA-ROSE GOOCH</h2>
						<h3>{identity.occupation}</h3>
						<h4>{identity.city}, {identity.country}</h4>
						{birthday === getTodaysDate() && <p>{getTodaysDate()}</p>}
					
						<p>A highly organised, committed, adaptable {identity.occupation} who strives to achieve her best and improve while she does it. Undergoing an integrated masters in Computing Sciences until 2028.</p>

						<h3><a href="blog">MY BLOG</a></h3>
						<p>Interested in what I'm getting up to? Consider checking out my blog! I write about some of the things I'm working on, how I did it, and other things I have discovered.</p>

					</div>
					<div id="profile">
						<img src={profileImg} alt="test">
					</div>
					<div id="socials">
						<!-- Add socials!! -->
					</div>
					<!-- Insert links to linkedin, github, portfolio, etc -->
				</div>
			</div>

			<h2>MY SKILLS</h2>
			<ul>
				{skills.map((skill) => <li>{skill}</li>)}
			</ul>
			
			<h2>EDUCATION</h2>
			<ul>
				{education.map((experience) => 
						<div>
							<h3><a href={experience.website}>{experience.location}</a></h3>
							<h4>{experience.title}</h4>
							<ul>
								{experience.grades.map((grade) => grade[0] ? <li>{grade[0]} - {grade[1]}</li> : <li>{grade[1]}</li>)}
							</ul>
						</div>)}
			</ul>
		</main>
	</body>
</html>
