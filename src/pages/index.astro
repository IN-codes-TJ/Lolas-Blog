<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<Header />
		<main>
			<div id="landing">
				<h1></h1>
				<p>It's nice to meet you!</p>
				<p id="info-para">I'm Lola, a passionate {identity.occupation} at {identity.occupation_company}. I really enjoy making things, from drawing to coding. Feel free to checkout my blog or portfolio if you're interested in the tech-side of things! Or you can scroll to see my skills and education.</p>
				{birthday === getTodaysDate() && <p>It's Lola's birthday today! {getTodaysDate()}</p>}
				<Social />
			</div>
			<div class="triangle-up"></div>
			<div id="space"></div>
			<div id="content">
				<h2>MY SKILLS</h2>
				<ul id="skills">
					{skills.map((skill) => <li class="skill">{skill}</li>)}
				</ul>
				
				<h2>EDUCATION</h2>
				<ul id="education">
					{education.map((experience) => 
							<div>
								<h3><a href={experience.website}>{experience.location}</a></h3>
								<h4>{experience.title}</h4>
								<ul id="grades">
									{experience.grades.map((grade) => grade[0] ? <li>{grade[0]} - {grade[1]}</li> : <li>{grade[1]}</li>)}
								</ul>
								<p>{experience.start} - {experience.end}</p>
								<ul id="educ-skills">
									{experience.skills.map((skill) => <li class="skill">{skill}</li>)}
								</ul>
							</div>)}
				</ul>
			</div>
		</main>
		<Footer />
		<script>
			import "../scripts/indexMenu.js";
		</script>
	</body>
</html>
