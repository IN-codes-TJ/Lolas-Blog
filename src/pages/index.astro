---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Social from '../components/Social.astro';

import '../styles/global.css';
import '../styles/index.css';

const pageTitle = "Hello!";

const identity = {
	country: "England",
	city: "Norwich",
	occupation: "Computer Science Student",
	occupation_company: "the University of East Anglia"
};

function getTodaysDate() {
	var today = new Date();
	var dd = String(today.getDate());
	var mm = String(today.getMonth() + 1);
	return dd + "/" + mm;
};

const birthday = "23/04";

const education = [{
						location:"University of East Anglia",
						website:"https://www.uea.ac.uk/",
						title:"Computing Sciences",
						start: "2024",
						end: "ongoing",
						skills: ["HTML", "CSS", "JavaScript", "PostgreSQL", "Java", "Advanced Maths"],
						grades: [[false, "Pending"]]
					},
					{
						location:"Thorpe St Andrew School & Sixth Form",
						website:"https://tsa-edu.co.uk/",
						title:"A-Level",
						start: "2022",
						end: "2024",
						skills: ["Python", "Maths"],
						grades: [["Further Mathematics", "A*"],
								["Mathematics", "A*"],
								["Computer Science", "A"],
								["Physics", "B"],
								["EPQ", "A*"]]
					},
					{
						location:"Thorpe St Andrew School & Sixth Form",
						website:"https://tsa-edu.co.uk/",
						title:"GCSE",
						start: "2017",
						end: "2022",
						skills: ["Python", "Maths"],
						grades: [["Mathematics", "9"],
								["Computer Science", "9"],
								["Combined Science", "9 9"],
								["Art & Design", "9"],
								["Design & Technology", "9"],
								["Geography", "9"],
								["English Literature", "9"],
								["English Language", "7"],
								["Creative iMedia", "7"]]
					}
];

const skills: string[] = [];
education.forEach((experience) => {
	var skill = experience.skills;
	skill.forEach((item) => {
		if (skills.includes(item) === false) {
			skills.push(item);
		}
	});
});

